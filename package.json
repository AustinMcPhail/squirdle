{
  "name": "squirdle",
  "version": "0.0.2",
  "description": "Squirdle Monorepo",
  "scripts": {
    "build:back": "pnpm run build --filter @squirdle/back",
    "build:portal": "pnpm run build --filter @squirdle/front",
    "dev:back": "pnpm run dev --filter @squirdle/back",
    "dev:front": "pnpm run dev --filter @squirdle/front",
    "dev": "concurrently \"pnpm run dev:back\" \"pnpm run dev:front\"",
    "start": "pnpm run dev"
  },
  "devDependencies": {
    "@types/node": "^17.0.15",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "git-cz": "^4.8.0"
  },
  "keywords": [
    "monorepo"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  },
  "author": "Austin McPhail",
  "license": "MIT"
}
